{
  "name": "database",
  "version": "0.0.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "prettier . --check && eslint .",
    "db:push": "drizzle-kit push:pg --schema schema.ts",
    "db:migrate:create": "drizzle-kit generate:pg --out drizzle --schema schema.ts",
    "db:migrate:run": "ts-node migrate.ts"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@auth/core": "^0.40.0",
    "@types/node": "^25.0.3",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-config-custom": "workspace:*",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "tsconfig": "workspace:*",
    "typescript": "5.9.3"
  }
}
